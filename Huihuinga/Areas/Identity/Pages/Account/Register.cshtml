@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<section class="section contact-form">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title">
                    <h3><span class="alternate">Registrarse</span></h3>
                </div>
            </div>
        </div>
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="row">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="col-md-12">
                <label asp-for="Input.Email">Correo</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="col-md-12">
                <label asp-for="Input.FirstName">Nombre</label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="col-md-12">
                <label asp-for="Input.LastName">Apellido</label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>

            <div class="col-md-12">
                <label asp-for="Input.Password">Contraseña</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="col-md-12">
                <label asp-for="Input.ConfirmPassword">Confirmar Contraseña</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="col-12 text-center">
                <button type="submit" class="btn btn-main-md">Registrarse</button>
            </div>
        </form>
    </div>
</section>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
