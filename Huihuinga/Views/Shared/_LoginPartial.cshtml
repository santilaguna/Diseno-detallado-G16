@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
        <a  class="ticket" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><span>@User.Identity.Name!</span></a>
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="ticket"><span>Logout</span></button>
        </form>
}
else
{
    
        <a class="ticket" asp-area="Identity" asp-page="/Account/Register"><span>Register</span></a>
        <a class="ticket" asp-area="Identity" asp-page="/Account/Login"><span>Login</span></a>
}
