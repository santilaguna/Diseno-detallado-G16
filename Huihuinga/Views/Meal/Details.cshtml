@model Huihuinga.Models.Meal

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@{var ruta = "~/images/" + Model.PhotoPath;
    if (Model.PhotoPath == null)
    {
        ruta = "~/conferencecss/images/centro-evento.jpg";
    }
}
<section class="page-title bg-title overlay-dark">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <div class="title">
                    <h3>Detalles De la comida</h3>
                </div>
            </div>
        </div>
    </div>
</section>



<section class="section single-speaker">
    <div class="container">
        <div class="block">
            <div class="row">
                <div class="col-lg-4 col-md-4 align-self-md-center">
                    <div class="image-block">
                        <img src=@ruta class="img-fluid" alt="speaker" asp-append-version="true">
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 align-self-center">
                    <div class="content-block">
                        <div class="name">
                            <h3> @Html.DisplayFor(model => model.name)</h3>
                        </div>
                        <div class="profession">
                            <p>@Html.DisplayFor(model => model.starttime)</p>
                            <p>@Html.DisplayFor(model => model.endtime)</p>
                            <p>Capacidad: @ViewData["maxAssistants"]</p>
                            <p>Cupos Disponible: @ViewData["availableSpace"]</p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-4 align-self-md-center">

                    <div class="content-block">
                        <div class="name">
                            <h5> Menus </h5>
                        </div>
                        <div class="list-group">
                            <ul>

                                @foreach (var element in (Menu[])ViewData["menus"])
                                {

                                    <li>
                                        <a asp-controller="Meal" asp-action="ShowMenu" asp-route-MenuId="@element.Id">@element.name</a>
                                        @if ((bool)ViewData["owner"])
                                        {
                                            <a class="btn-outline-danger" asp-controller="Meal" asp-action="DeleteMenu" asp-route-EventId=@Model.id asp-route-MenuId=@element.Id>Eliminar</a>
                                        }
                                    </li>

                                }
                                @if ((bool)ViewData["owner"])
                                {
                                    <li><a class="btn-outline-danger" asp-controller="Meal" asp-action="NewMenu" asp-route-id=@Model.id>Agregar nuevo Menu</a></li>
                                }
                            </ul>
                        </div>
                        <div class="details">

                        </div>
                    </div>

                </div>
            </div>
            <div class="col-12 text-center">
                <nav class="d-flex justify-content-center">
                    <div class="col-lg-4 col-md-12">
                        <div class="subscribe-button">
                            @{
                                if (Model.concreteConferenceId == null) {
                                    <a class="btn btn-main-md" asp-action="Index" asp-controller="Meal">Volver</a>
                                }
                                else
                                {
                                    <a class="btn btn-main-md" asp-action="ShowEvents" asp-controller="ConcreteConference" asp-route-id=@Model.concreteConferenceId>Volver</a>
                                }
                            }
                        </div>
                    </div>
                    @if ((bool)ViewData["owner"])
                    {
                    <div class="col-lg-4 col-md-12">
                        <div class="subscribe-button">
                            <a class="btn btn-main-md" asp-controller="Meal" asp-route-id=@Model.id asp-action="Edit">Editar informacion</a>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-12">
                        <div class="subscribe-button">
                            <a class="btn btn-main-md" asp-controller="Meal" asp-route-id=@Model.id asp-action="Delete">Eliminar Comida</a>
                        </div>
                    </div>
                    }
                    @if ((bool) ViewData["userSubscribed"] && (bool) ViewData["currentUser"])
                    {
                        <div class="subscribe-button">
                            <a class="btn btn-main-md" asp-action="Disjoint" asp-route-eventId=@Model.id>Salirse</a>
                        </div>
                    }
                    else
                    {
                        <div class="subscribe-button">
                            <a class="btn btn-main-md" asp-action="Join" asp-route-eventId=@Model.id>Unirse</a>
                        </div>
                    }
                </nav>
            </div>
        </div>
    </div>
</section>
