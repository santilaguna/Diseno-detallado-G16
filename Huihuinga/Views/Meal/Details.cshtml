@model Huihuinga.Models.Meal

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@{var ruta = "~/images/" + Model.PhotoPath;
    if (Model.PhotoPath == null)
    {
        ruta = "~/conferencecss/images/centro-evento.jpg";
    }
}
<section class="page-title bg-title overlay-dark">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <div class="title">
                    <h3>Detalles De la comida</h3>
                </div>
            </div>
        </div>
    </div>
</section>



<section class="section single-speaker">
    <div class="container">
        <div class="block">
            <div class="col-12 text-center">
                <nav class="navbar navbar-expand-md bg-light navbar-light justify-content-center" style="background-color: white !important;">
                    <ul class="navbar-nav">
                         <li class="nav-item">
                            @{
                                if (Model.concreteConferenceId == null)
                                {
                                    <a class="nav-link" asp-action="Index" asp-controller="Meal">Volver</a>
                                }
                                else
                                {
                                    <a class="nav-link" asp-action="ShowEvents" asp-controller="ConcreteConference" asp-route-id=@Model.concreteConferenceId>Volver</a>
                                }
                            }
                        </li>
                        @if ((bool)ViewData["owner"])
                        {
                        <li class="nav-item">
                            <div class="subscribe-button">
                                <a class="nav-link" asp-controller="Meal" asp-route-id=@Model.id asp-action="Edit">Editar informacion</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="subscribe-button">
                                <a class="nav-link" asp-controller="Meal" asp-route-id=@Model.id asp-action="Delete">Eliminar Comida</a>
                            </div>
                        </li>
                        }
                        @if ((bool)ViewData["can_feedback"] && (bool)ViewData["finished"] && Model.concreteConferenceId != null)
                        {
                        <li class="nav-item">
                            <div class="subscribe-button">
                                <a class="nav-link" asp-action="NewConferenceFeedback" asp-route-eventId=@Model.id
                                   asp-route-ConcreteConferenceId="@Model.concreteConferenceId">Realizar feedback</a>

                            </div>
                        </li>
                        }

                        else if ((bool)ViewData["finished"] && Model.concreteConferenceId == null)
                        {
                        <li class="nav-item">
                            <div class="subscribe-button">
                                <a class="nav-link" asp-action="ViewFeedbacks" asp-route-eventId=@Model.id>Ver Feedbacks</a>
                            </div>
                        </li>
                        }
                    </ul>
                </nav>
            </div>
            <div class="row">
                <div class="col-lg-4 col-md-4 align-self-md-center">
                    <div class="image-block">
                        <img src=@ruta class="img-fluid" alt="speaker" asp-append-version="true">
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 align-self-center">
                    <div class="content-block">
                        <div class="name">
                            <h3> @Html.DisplayFor(model => model.name)</h3>
                        </div>
                        <div class="profession">
                            <p>@Html.DisplayFor(model => model.starttime)</p>
                            <p>@Html.DisplayFor(model => model.endtime)</p>
                            <p>Capacidad: @ViewData["maxAssistants"]</p>
                            <p>Cupos Disponible: @ViewData["availableSpace"]</p>
                            @if (!(bool)ViewData["finished"])
                            {
                                <br />
                                @if ((bool)ViewData["userSubscribed"] && (bool)ViewData["currentUser"])
                                {
                                    <div class="subscribe-button">
                                        <a class="btn btn-main-md" asp-action="Disjoint" asp-route-eventId=@Model.id>Salirse</a>
                                    </div>
                                }
                                else
                                {
                                    <div class="subscribe-button">
                                        <a class="btn btn-main-md" asp-action="Join" asp-route-eventId=@Model.id>Unirse</a>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-4 align-self-md-center">

                    <div class="content-block">
                        <div class="name">
                            <h5> Menus </h5>
                        </div>
                        <div class="list-group">
                            <ul>

                                @foreach (var element in (Menu[])ViewData["menus"])
                                {

                                    <li>
                                        <a asp-controller="Meal" asp-action="ShowMenu" asp-route-MenuId="@element.Id">@element.name</a>
                                        @if ((bool)ViewData["owner"])
                                        {
                                            <a class="btn-outline-danger" asp-controller="Meal" asp-action="DeleteMenu" asp-route-EventId=@Model.id asp-route-MenuId=@element.Id>Eliminar</a>
                                        }
                                    </li>

                                }
                                @if ((bool)ViewData["owner"])
                                {
                                    <li><a class="btn-outline-danger" asp-controller="Meal" asp-action="NewMenu" asp-route-id=@Model.id>Agregar nuevo Menu</a></li>
                                }
                            </ul>
                        </div>
                        <div class="details">

                        </div>
                    </div>

                </div>
            </div>
            @if ((bool)ViewData["owner"] && Model.endtime > DateTime.Now)
            {
                <br />
                <br />
                <div class="row">
                    <form  style="width:100%;" asp-controller="Meal" asp-action="SendNotification" asp-route-id=@Model.id method="get">
                        <div class="form-actions">
                            <p> Nuevo Mensaje: (a todos los asistentes)</p>
                            <p>
                                <textarea 
                                    style="width: 100%;height: 150px;padding: 12px 20px;box-sizing: border-box;border: 2px solid #ccc;border-radius: 4px;font-size: 16px;" 
                                    class="mailtxt" name="mailBodyMessage">
                                </textarea>
                            </p>
                            <input type="submit" value="Enviar" class="btn btn-main-md" />
                        </div>
                    </form>
                </div>
            }
        </div>
    </div>
</section>
