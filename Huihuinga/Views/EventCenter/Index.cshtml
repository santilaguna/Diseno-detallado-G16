
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="page-title bg-title overlay-dark">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <div class="title">
                    <h3>Centros de Eventos</h3>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="news section">
    <div class="container">
        <div class="col-12 text-center">
            <nav class="navbar navbar-expand-md bg-light navbar-light justify-content-center" style="background-color: white !important;">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <div class="subscribe-button">
                            <a class="nav-link" asp-controller="EventCenter" asp-action="New">Nuevo Centro de Eventos</a>
                        </div>
                    </li>
                </ul>
            </nav>
        </div>
        <div class="row mt-30">
            @foreach (var eventcenter in Model.EventCenters)
            {
                var ruta = "~/images/" + eventcenter.PhotoPath;
                if (eventcenter.PhotoPath == null)
                    {
                        ruta = "~/conferencecss/images/centro-evento.jpg";
                    }
                
                <div class="col-lg-4 col-md-6 col-sm-8 col-10 m-auto">
                    <div class="blog-post">
                        <div class="post-thumb">
                           <a asp-action="Details" asp-route-id="@eventcenter.id">
                                <img src=@ruta alt="post-image" class="img-fluid" asp-append-version="true">
                            </a>
                        </div>
                        <div class="post-content">
                            <div class="post-title">
                                <h2>@eventcenter.name</h2>
                            </div>
                            <div class="post-meta">
                                <ul class="list-inline">
                                    <li class="list-inline-item">
                                        @eventcenter.address
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</section>