@model Huihuinga.Models.HallCreateViewModel

@{
    ViewData["Title"] = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section contact-form">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title">
                    <h3><span class="alternate">Nueva Sala de Eventos</span></h3>
                </div>
            </div>
        </div>
        <form enctype="multipart/form-data" asp-action="Create" method="Post" class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-12">
                <label asp-for="name" class="control-label">Nombre</label>
                <input asp-for="name" class="form-control" />
                <input asp-for="EventCenterid" class="form-control" type="hidden" value=@ViewData["centerid"] />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="col-md-12">
                <label asp-for="capacity" class="control-label">Capacidad</label>
                <input asp-for="capacity" class="form-control" />
                <span asp-validation-for="capacity" class="text-danger"></span>
            </div>
            <div class="col-md-12">
                <label asp-for="location" class="control-label">Ubicación</label>
                <input asp-for="location" class="form-control" />
                <span asp-validation-for="location" class="text-danger"></span>
            </div>
            <div class="col-md-12 form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="projector"/> Proyector
                </label>
            </div>
            <div class="col-md-12">
                <label asp-for="plugs" class="control-label">Enchufes</label>
                <input asp-for="plugs" class="form-control" />
                <span asp-validation-for="plugs" class="text-danger"></span>
            </div>
            <div class="col-md-12">
                <label asp-for="computers" class="control-label">Computadores</label>
                <input asp-for="computers" class="form-control" />
                <span asp-validation-for="computers" class="text-danger"></span>
            </div>

            <div class="col-md-12">
                <label asp-for="Photo" class="control-label">Fotos</label>
                <input asp-for="Photo" class="form-control" />
            </div>

            <div class="col-12 text-center">
                <input type="submit" value="Crear" class="btn btn-main-md"/>
            </div>

        </form>
    </div>
</section>

<div class="col-md-12 text-center">
    <a class="btn btn-main-md" asp-action="Index" asp-route-id=@ViewData["centerid"]>Volver</a>
</div>

