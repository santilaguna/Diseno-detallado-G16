@model Huihuinga.Models.Topic

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="page-title bg-title overlay-dark">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <div class="title">
                    <h3>Detalles Tema</h3>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="section single-speaker">
    <div class="container">
        <div class="block">
            <div class="row">
                <div class="col-lg-5 col-md-6 align-self-md-center">
                    <div class="image-block">
                        <img src="~/conferencecss/images/temas.jpg" class="img-fluid" alt="speaker" asp-append-version="true">
                    </div>
                </div>
                <div class="col-lg-7 col-md-6 align-self-center">
                    <div class="content-block">
                        <div class="name">
                            <h3> @Html.DisplayFor(model => model.name)</h3>
                        </div>
                        <div class="details">
                            <p>@Html.DisplayFor(model => model.description)</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 text-center">
                <nav class="d-flex justify-content-center">
                    <div class="col-lg-4 col-md-12">
                        <div class="subscribe-button">
                            <a class="btn btn-main-md" asp-controller="Topic" asp-action="Index">Volver a temas</a>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-12">
                        <div class="subscribe-button">
                            <a class="btn btn-main-md" asp-controller="Topic" asp-route-id=@Model.id asp-action="Edit">Editar información tema</a>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-12">
                        <div class="subscribe-button">
                            <a class="btn btn-main-md" asp-controller="Topic" asp-route-id=@Model.id asp-action="Delete">Eliminar tema</a>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>
</section>

