
@{
    ViewData["Title"] = "Feedbacks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="page-title bg-title overlay-dark">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <div class="title">
                    <h3>Feedbacks</h3>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="section testimonial">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title">
                    @{ 
                        if ((double)ViewData["MusicQuality"] != 0) { <h3>Calidad de la música = @ViewData["MusicQuality"]</h3> }


                        if ((double)ViewData["PlaceQuality"] != 0) { <h3>Valoración promedio del lugar = @ViewData["PlaceQuality"]</h3> }


                        if ((double)ViewData["MaterialQuality"] != 0) { <h3>Calidad del material = @ViewData["MaterialQuality"]</h3> }


                        if ((double)ViewData["ExpositorQuality"] != 0) { <h3>Calidad promedio de los expositores = @ViewData["ExpositorQuality"]</h3> }


                        if ((double)ViewData["DiscussionQuality"] != 0) { <h3>Valoración de las discusiones = @ViewData["DiscussionQuality"]</h3> }

                        if ((double)ViewData["FoodQuality"] != 0) { <h3>Sabor de la comida = @ViewData["FoodQuality"]</h3> }

                        if ( (double)ViewData["MusicQuality"] == 0 && (double)ViewData["PlaceQuality"] == 0  && (double)ViewData["MaterialQuality"] == 0
                            && (double)ViewData["ExpositorQuality"] == 0 && (double)ViewData["DiscussionQuality"] == 0 && (double)ViewData["FoodQuality"] == 0)
                        {
                            <h3>Esta versión no ha sido evaluada</h3>
                        }

                    }
                </div>
            </div>
        </div>
        <div class="row mt-20">
            @foreach (string comment in (List<string>)ViewData["Comments"])
            {
                <div class="col-lg-4 col-md-6 mb-20">
                    <!-- Testimonial -->
                    <div class="testimonial-item">
                        <!-- Given Comment -->
                        <div class="comment">
                            <p>@comment</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<div class="col-12 text-center">
    <nav class="d-flex justify-content-center">
        <div class="col-lg-4 col-md-12">
            <div class="subscribe-button">
                <a class="btn btn-main-md" asp-action="Details" asp-route-id=@ViewData["concreteConference_id"]>Volver</a>
            </div>
        </div>
    </nav>

</div>
