@model Huihuinga.Models.ConcreteConferenceCreateViewModel

@{
    ViewData["Title"] = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section contact-form">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title">
                    <h3><span class="alternate">Nueva Versión Conferencia</span></h3>
                </div>
            </div>
        </div>
        <form enctype="multipart/form-data" asp-controller="ConcreteConference" asp-action="Create" method="Post" class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-12">
                <label class="control-label">Nombre</label>
                <input asp-for="name" class="form-control" />
                <input asp-for="abstractConferenceId" class="form-control" type="hidden" value=@ViewData["abstractConferenceId"] />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="col-md-12">
                <label class="control-label">Máximo asistentes</label>
                <input name="Maxassistants" id="Maxassistants" class="form-control" />
            </div>
            <div class="col-md-12">

                <label class="control-label">fecha de inicio</label>
                <input asp-for="starttime" name="starttime" id="starttime" class="form-control" type="datetime-local" value="2019-12-18T00:00" />
                <span asp-validation-for="starttime" class="text-danger"></span>

            </div>
            <div class="col-md-12">
                <label class="control-label">fecha de fin</label>
                <input name="endtime" id="endtime" class="form-control" type="datetime-local" value="2019-12-18T00:00" />

            </div>
            <div class="col-md-12">
                <label asp-for="Photo" class="control-label">Foto</label>
                <input asp-for="Photo" class="form-control" />
            </div>
            <div class="col-md-12">
                <label class="control-label">Centro de eventos</label>
                <select required name="centerId" id="centerId" asp-items=@(new SelectList(Model.EventCenters,"id","name"))><option value="">None</option></select>
                <span asp-validation-for="centerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-main-md" />
            </div>
        </form>
    </div>
</section>


<div class="col-md-12 text-center">
    <a asp-controller="Conference" asp-action="Details" asp-route-id=@ViewData["abstractConferenceId"]>Volver</a>
</div>