@model Huihuinga.Models.ConferenceFeedback

@{
    ViewData["Title"] = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<section class="section contact-form">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title">
                    <h3><span class="alternate">Dar Feedback</span></h3>
                </div>
            </div>
        </div>
        <form enctype="multipart/form-data" asp-controller="ConcreteConference" asp-action="CreateConferenceFeedback" method="Post" class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-md-12">
                <label asp-for="comment" class="control-label">Comentarios adicionales</label>
                <textarea required asp-for="comment" class="form-control main" rows="10"> </textarea>
                <span asp-validation-for="comment" class="text-danger"></span>
                <input asp-for="ConferenceId" class="form-control" type="hidden" value=@ViewData["ConferenceId"] />
                <input asp-for="ConcreteConferenceId" class="form-control" type="hidden" value=@ViewData["ConcreteConferenceId"] />
            </div>

            <div class="col-12 text-center">
                <input type="submit" value="Enviar" class="btn btn-main-md" />
            </div>
        </form>
    </div>
</section>

<div class="col-md-12 text-center">
    <a asp-action="Details" asp-route-id=@ViewData["ConcreteConferenceId"] asp-controller="ConcreteConference">Volver</a>
</div>

