@model Huihuinga.Models.PartyCreateViewModel

@{
    ViewData["Title"] = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<section class="section contact-form">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title">
                    <h3><span class="alternate">Nueva Fiesta</span></h3>
                </div>
            </div>
        </div>
        <form enctype="multipart/form-data" asp-controller="Party" asp-action="Create" method="Post" class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-12">
                <label asp-for="name" class="control-label">Nombre</label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
                <input asp-for="concreteConferenceId" class="form-control" type="hidden" value=@ViewData["concreteConferenceId"] />
            </div>
            <div class="col-md-12">
                <label asp-for="description" class="control-label">Descripción</label>
                <input asp-for="description" class="form-control" />
                <span asp-validation-for="description" class="text-danger"></span>
            </div>

            <div class="col-md-12">
                <label asp-for="Photo" class="control-label">Foto</label>
                <input asp-for="Photo" class="form-control" />
            </div>

            <div class="col-md-12">
                <label asp-for="starttime" class="control-label">Inicio</label>
                <input asp-for="starttime" class="form-control" />
                <span asp-validation-for="starttime" class="text-danger"></span>
            </div>

            <div class="col-md-12">
                <label asp-for="endtime" class="control-label">Término</label>
                <input asp-for="endtime" class="form-control" />
                <span asp-validation-for="endtime" class="text-danger"></span>
            </div>

            <div class="col-md-12">
                <label class="control-label">Hall</label>
                <select required name="Hallid" id="Hallid" asp-items=@(new SelectList(Model.Halls,"id","name"))><option value="">None</option></select>
                <span asp-validation-for="Hallid" class="text-danger"></span>
            </div>

            <div class="col-12 text-center">
                <input type="submit" value="Crear" class="btn btn-main-md"/>
            </div>
        </form>
    </div>
</section>

<div class="col-md-12 text-center">
    @{
    if (ViewData["concreteConferenceId"] == null) {
        <div class="subscribe-button">
            <a class="btn btn-main-md" asp-action="Index" asp-controller="Party">Volver</a>
        </div>
    }
    else
    {
        <div class="subscribe-button">
            <a class="btn btn-main-md" asp-action="ShowEvents" asp-controller="ConcreteConference" asp-route-id=@ViewData["concreteConferenceId"]>Volver</a>
        </div>
    }
    }
</div>
